{
    "name": "bytes4run/sima",
    "description": "Simple Inventory Management Application",
    "type": "project",
    "license": "MIT",
    "version": "1.0.0",
    "autoload": {
        "psr-4": {
            "app\\": "./app",
            "tests\\": "./test"
        }
    },
    "optimize-autoloader": true,
    "authors": [
        {
            "name": "Jorge Echeverria",
            "email": "jecheverria@bytes4run.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "smarty/smarty": "^4.3",
        "guzzlehttp/guzzle": "^7.5",
        "firebase/php-jwt": "^6.3",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpunit/phpunit": "^9.5",
        "phpmailer/phpmailer": "^6.7",
        "phpstan/phpdoc-parser": "^1.16",
        "ramsey/uuid": "^4.7",
        "psr/log": "^3.0",
        "psr/http-client": "^1.0",
        "ext-json": "*",
        "doctrine/orm": "^2.14",
        "doctrine/dbal": "^3.2",
        "symfony/yaml": "^5.4",
        "symfony/cache": "^5.4",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload-dev": {
        "psr-4": {
            "app\\Tests\\": "./test"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}